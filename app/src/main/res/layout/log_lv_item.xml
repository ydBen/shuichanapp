<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EDE5DB">


        <LinearLayout
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间:"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_logTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-03-15 10:20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别/名称:"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_logType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饵料"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "/>
                <TextView
                    android:id="@+id/tv_logName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小鱼"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量/单价:"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_logMount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100斤"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "/>
                <TextView
                    android:id="@+id/tv_logPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1元/斤"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额:"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_logSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#fff">
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_logicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@mipmap/logicon"/>


    <Button
        android:layout_below="@+id/iv_logicon"
        android:id="@+id/btn_image"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="image"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@drawable/btn_rounded_red"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        />


</RelativeLayout>